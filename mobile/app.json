{
  "expo": {
    "name": "Ayahfinder App",
    "slug": "ayahfinder-app",
    "version": "0.1.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#1e7b5f"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ayahfinder.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Ayahfinder needs microphone access to listen to Quran recitation for identification."
      },
      "googleServicesFile": "./GoogleService-Info.plist"
    },
    "android": {
      "package": "com.ayahfinder.app",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow Ayahfinder to access your microphone to identify Quran recitations."
        }
      ],
      "expo-font",
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      [
        "expo-apple-authentication"
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.396865280784-o34bdlvl20ob3njhethqrc32pg060kl1"
        }
      ]
    ],
    "newArchEnabled": true,
    "extra": {
      "eas": {
        "projectId": "e8673c2c-a93e-4518-8248-584f58b24e6b"
      }
    },
    "owner": "silverfangs123"
  }
}
